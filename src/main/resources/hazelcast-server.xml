        <map-store enabled="true">
            <class-name>com.jazasoft.hzdemo.mapstore.BookMapStore</class-name>
        </map-store>
    </map>

    <data-connection name="pg-database">
        <type>JDBC</type>
        <properties>
            <property name="jdbcUrl">jdbc:postgresql://192.168.1.110:5432/hz_demo</property>
            <property name="user">postgres</property>
            <property name="password">zahid7292</property>
        </properties>
        <shared>true</shared>
